{
  "name": "escrow-poc",
  "version": "1.0.0",
  "description": "Smart Contracts for escrow poc",
  "scripts": {
    "sizereport": "hardhat size-contracts",
    "lint": "prettier --list-different contracts test scripts deploy",
    "pretty": "prettier --write contracts scripts deploy test",
    "export-abi": "hardhat export-abi",
    "clear-abi": "hardhat clear-abi",
    "deploy:mumbai": "hardhat deploy --no-impersonation --network mumbai",
    "deploy:polygon": "hardhat deploy --no-impersonation --network polygon"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "hardhat": "^2.14.0",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-deploy": "^0.11.30",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-tracer": "^2.3.2",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.3",
    "eth-sig-util": "^3.0.1"
  }
}
